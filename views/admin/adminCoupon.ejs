<%- include('../include/adminBase.ejs') %>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />

<section id="content">
  <main>
    <div class="table-data">
      <div class="order">
        <div class="head">
          <h3>Active coupon</h3>
          <a href='/deleteCoupon'>
            <button class="btn btn-rounded">
              <i class='bx bx-trash'></i>deleted/Expired
            </button>
          </a>
          <a href="/addCoupon">
            <button class="btn btn-rounded">
              <i class='bx bx-plus'></i>Add Coupon
            </button>
          </a>
        </div>
        <% if(coupons.length > 0){ %>
        <table>
          <thead>
            <tr>
              <th>Coupon Code</th>
              <th>Discount</th>
              <th>count</th>
              <th>Max Amount</th>
              <th>Expires At</th>
              <th>Status</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% coupons.forEach((item) => { %>
              <tr>
                <td><%= item.couponCode %></td>
                <td><%= item.discount %></td>
                <td><%= item.couponCount %></td>
                <td><%= "â‚¹" + item.maxAmount %></td>
                <td><%= item.expiresAt %></td>
                <td>
                  <span class="status cancelled" style="background-color: rgb(52, 157, 0);">
                    Active
                  </span>
                </td>
                <td>
                  <a href="/delete-Coupon?id=<%= item._id %>">
                    <i class="fas fa-trash-alt" style="color: black;"></i>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <% }else{ %>
          <div>
            <p>There are no Coupons Add One</p>
          </div>
          <% } %>
      </div>
    </div>
      
  </main>
     <!-- Pagination Controls -->
     <% if(totalPages > 0) {%>
     <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Page Button -->
            <% if (page > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin-Coupon?page=<%= page - 1 %>&limit=<%= limit %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&laquo;</span>
                </li>
            <% } %>
  
            <!-- Page Number Buttons -->
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>">
                    <a class="page-link" href="/admin-Coupon?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                </li>
            <% } %>
  
            <!-- Next Page Button -->
            <% if (page < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="/admin-Coupon?page=<%= page + 1 %>&limit=<%= limit %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&raquo;</span>
                </li>
            <% } %>
        </ul>
    </nav>
    <% } %>
</section>
</body>
</html>
