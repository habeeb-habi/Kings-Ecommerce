<%- include('include/adminBase.ejs') %>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />

<section id="content">
  <main>
    <div class="table-data">
      <div class="order">
        <div class="head">
          <h3>Category offer</h3>
          <a href='/deleteOffers'>
            <button class="btn btn-rounded">
              <i class='bx bx-trash'></i>deleted/Expired
            </button>
          </a>
          <a href="/addOffers">
            <button class="btn btn-rounded">
              <i class='bx bx-plus'></i>Add offer
            </button>
          </a>
        </div>
        <% if (offer && offer.length > 0) { %>
          
        <table>
          <thead>
            <tr>
              <th>Category</th>
              <th>Discount</th>
              <th>Expires At</th>
              <th>Status</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% offer.forEach(offer => { %>
              <tr>
                <td><%= offer.name %></td>
                <td><%= offer.discount %></td>
                <td><%= offer.expiresAt.toDateString() %></td>
                <td>
                  <span class="status cancelled" style="background-color: rgb(52, 157, 0);">
                    Active
                  </span>
                </td>
                <td>
                  <a href="/delete-Coupon?id=<% offer._id %>">
                    <i class="fas fa-trash-alt" style="color: black;"></i>
                  </a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
   <% }else{ %>
    <p>No offers available</p>
    <% } %>
      </div>
    </div>
      
  </main>
     <!-- Pagination Controls -->
     <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Page Button -->
            
                <li class="page-item">
                    <a class="page-link" href="/admin" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&laquo;</span>
                </li>
          
  
            <!-- Page Number Buttons -->
         
                <li class="page-item ">
                    <a class="page-link" href="/admi"></a>
                </li>
       
  
            <!-- Next Page Button -->
           
                <li class="page-item">
                    <a class="page-link" href="/admi" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&raquo;</span>
                </li>
          
        </ul>
    </nav>
</section>


</body>
</html>