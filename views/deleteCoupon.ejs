<%- include('include/adminBase.ejs') %>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<script src="https://kit.fontawesome.com/23d1247997.js" crossorigin="anonymous"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />

<section id="content">
    <main>
        <div class="table-data">
            <div class="order">
                <div class="head">
                    <h3>Deleted Coupons</h3>
                    <i class='bx bx-search'></i>
                    <i class='bx bx-filter'></i>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Si. No</th>
                            <th>Coupons</th>
                            <th>Discount</th>
                            <th>Created At</th>
                            <th>Expired At</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let count = (page - 1) * limit %>
                        <% unlistedCoupons.forEach((item) => { %>
                            <% count++ %>
                            <tr>
                                <td><%= count %></td>
                                <td><%= item.couponCode %></td>
                                <td><%= item.discount + "%" %></td>
                                <td><%= item.createdAt.toDateString() %></td>
                                <td><%= item.expiresAt.toDateString() %></td>
                                <td>
                                    <span class="status cancelled" style="background-color: rgb(209, 0, 0);">InActive</span>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <!-- Pagination Controls -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Page Button -->
            <% if (page > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="/deleteCoupon?page=<%= page - 1 %>&limit=<%= limit %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&laquo;</span>
                </li>
            <% } %>

            <!-- Page Number Buttons -->
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>">
                    <a class="page-link" href="/deleteCoupon?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                </li>
            <% } %>

            <!-- Next Page Button -->
            <% if (page < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="/deleteCoupon?page=<%= page + 1 %>&limit=<%= limit %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <span class="page-link" aria-hidden="true">&raquo;</span>
                </li>
            <% } %>
        </ul>
    </nav>
</section>
</body>
</html>
