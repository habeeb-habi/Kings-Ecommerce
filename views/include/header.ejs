      <script>
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                // Fetch total items from the server
                const response = await fetch('/getTotalItemsInCart');
                const data = await response.json();
                const totalItems = data.totalQuantity;
        
                // Update the HTML element displaying total items in the navbar
                const totalItemsElement = document.getElementById('total-cart-items');
                if (totalItemsElement) {
                    if (totalItems > 0) {
                        totalItemsElement.textContent = totalItems;
                        totalItemsElement.style.display = 'inline-block'; // Show the span tag
                    } else {
                        totalItemsElement.style.display = 'none'; // Hide the span tag if totalItems is 0
                    }
                }
            } catch (error) {
                console.error('Error fetching total items in cart:', error);
            }
        });
        </script>
         <script>
