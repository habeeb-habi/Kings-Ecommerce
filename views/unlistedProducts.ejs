<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- My CSS -->
    <link rel="stylesheet" href="/stylesheet/adminDashboard.css">

    <title>AdminHub</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />
</head>

<body>

    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="/admin-Dashboard" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">AdminHub</span>
        </a>
        <ul class="side-menu top">
            <li>
                <a href="/admin-Dashboard">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="/admin-Products">
                    <i class='bx bxs-message-dots'></i>
                    <span class="text">Products</span>
                </a>
            </li>

            <li>
                <a href="/admin-Orders">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">Orders</span>
                </a>
            </li>

            <li>
                <a href="/admin-Users">
                    <i class='bx bxs-group'></i>
                    <span class="text">users</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="/adminLogin" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <section>
                <form action='/admin-Products'>
                    <button class="btn btn-primary" type="submit">Go Back</button>
                </form>
                <div class="row">
                    <div class="row">
                        <table class="table align-middle mb-0 bg-white" id="table_id" class="display">
                            <thead class="bg-light">
                                <tr>
                                    <th style="padding-left: 4%">Name</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0;i<data.length;i++) { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="/images/<%= data[i].pImages[0] %>" alt=""
                                                    style="width: 45px; height: 45px" class="rounded-circle" />
                                                <div class="ms-3">
                                                    <p class="fw-bold mb-1 name">
                                                        <%= data[i].pName %>
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="fw-normal mb-1">
                                                <%= data[i].category.name %>
                                            </p>
                                        </td>
                                        <td style="color: rgb(224, 10, 10);">
                                            <%= data[i].price %>
                                        </td>
                                        <td>
                                            <%= data[i].stock %>
                                        </td>
                                        <td><a href="/unlist-Product?id=<%= data[i]._id  %>"
                                                class="btn btn-light border px-2 pt-2 icon-hover"
                                                style="margin-right: 3%;"><i
                                                    class="fas fa-trash fa-lg text-secondary px-1"></i></a></td>

                                        <td><a href="/restore-product?id=<%= data[i]._id  %>"
                                                class="btn btn-light border px-2 pt-2 icon-hover"
                                                style="margin-right: 3%;"><i
                                                    class="fas fa-trash-restore fa-lg text-secondary px-1"></i></a></td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <script>
        // Your scripts here
    </script>
</body>

</html>