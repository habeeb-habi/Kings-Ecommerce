<!-- include header -->
<%- include('include/header') %>
<!-- /include header -->

<title>Wallet History</title>

<!-- Bootstrap CSS CDN -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #ffffff;
    margin: 0;
    padding: 0;
    color: #000000;
  }

  .container {
    width: 80%;
    margin: auto;
    overflow: hidden;
    padding-top: 20px;
    padding-bottom: 20px;
  }

  h1 {
    background: #00c2ff59;
    color: #000000;
    padding: 10px 0;
    text-align: center;
  }

  p {
    font-size: 1.2em;
    text-align: center;
  }

  table {
    width: 100%;
    margin-top: 20px;
    margin-bottom: 20px;
    border-collapse: collapse;
    background-color: #7ad7f19c;
  }

  th, td {
    border: 1px solid #ffffff;
    padding: 8px;
    text-align: center;
  }

  th {
    background-color: #ffffffd0;
    color: #000000;
  }

  tr:nth-child(even) {
    background-color: #00c2ff59;
  }
  .pagination {
  margin-top: 20px;
}

.page-link {
  color: #000000;
}

.page-item.active .page-link {
  background-color: #00c2ff59;
  border-color: #00c2ff59;
}


</style>

<main>
  <div class="container">
    <% if(wallet && wallet.transactions && wallet.transactions.length > 0) { %>
      <h1>Wallet History for User: <%= wallet.userId %></h1>
      <p class="CB">Current Balance: ₹<%= wallet.walletBalance %></p>
      <table class="table">
        <thead>
          <tr>
            <th>Si No :</th>
            <th>Transaction ID</th>
            <th>Amount</th>
            <th>Debit/Credit</th>
            <th>Status</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% wallet.transactions.forEach((transaction, index) => { %>
            <tr>
              <td><%= (wallet.currentPage - 1) * 10 + index + 1 %></td>
              <td><%= transaction.transactionId %></td>
              <td>₹<%= transaction.amount %></td>
              <td><%= transaction.credit ? 'Credit' : 'Debit' %></td>
              <td><%= transaction.status %></td>
              <td><%= new Date(transaction.timestamp).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- Pagination Controls -->
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <% for(let i = 1; i <= wallet.totalPages; i++) { %>
            <li class="page-item <%= i === wallet.currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>&limit=10"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } else { %>
      <div class="col-lg-12 mb-9">
        <p>Wallet is empty</p>
      </div>
    <% } %>
  </div>
</main>

<!-- include footer -->
<%- include('include/footer') %>
<!-- /include footer -->
